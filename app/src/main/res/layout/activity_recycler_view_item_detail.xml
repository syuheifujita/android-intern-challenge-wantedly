<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_rv_item_image_url"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@mipmap/ic_launcher"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_rv_item_looking_for"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="test" />
            <TextView
                android:id="@+id/tv_rv_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="test" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_rv_item_company"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_rv_item_avatar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:src="@mipmap/ic_launcher"/>
            <TextView
                android:id="@+id/tv_rv_item_company_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text=""
                android:gravity="center_vertical"/>
        </LinearLayout>
    </LinearLayout>
</layout>
